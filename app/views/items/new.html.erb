<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800"><%= t('item.new') %></h1>
</div>

<%= form_tag(items_path, method: "get") do %>
  <div class="row">
    <div class="col-12">
      <%= text_field_tag :check, params[:check], class: 'form-control', placeholder:  t('item.checkdetail'), id: "lol" %>
    </div>
    <div class="col-12">

      <%= button_tag(type: "submit", class: "btn btn-primary pull-right", hidden: true, data: { confirm: 'Нягталж харсан уу?', disable_with: "Loading ..." }) do %>
        <i class="fa fa-search"></i>
      <% end %>
    </div>
  </div>
<% end %>
<br>

<%= render 'form', item: @item %>
